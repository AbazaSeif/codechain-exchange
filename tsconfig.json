{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "newLine": "LF",
    "outDir": "./build",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["./server/**/*", "./bin/*", "**/*.spec.ts"],
  "exclude": ["node_modules"]
}
